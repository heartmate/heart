<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.HeartmatePack.heartmate">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/hmicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.HeartmatePack.heartmate.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.HeartmatePack.heartmate.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.HeartmatePack.heartmate.Login_Activity" />
        <activity android:name="com.HeartmatePack.heartmate.ForgetPassword" />
        <activity android:name="com.HeartmatePack.heartmate.PatientSignUp1Activity" />
        <activity android:name="com.HeartmatePack.heartmate.PatientSignUp2Activity" />
        <activity android:name="com.HeartmatePack.heartmate.DoctorSignUpActivity" />
        <activity android:name="com.HeartmatePack.heartmate.EditActivity" />
        <activity android:name="com.HeartmatePack.heartmate.PatientSelectedActivity" />
        <activity android:name="com.HeartmatePack.heartmate.PatientSelectedInfoActivity" />
        <activity android:name="com.HeartmatePack.heartmate.HistoryActivity" />

        <service
            android:name="com.HeartmatePack.heartmate.MyService"
            android:enabled="true"
            android:exported="true"></service>
    </application>

</manifest>